            android:name=".ui.notice.NoticeListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.password.PasswordResetConfirmActivity"
            android:exported="false" />
        <activity
            android:name=".ui.password.PasswordResetActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
