<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- 이미지 위치 상단에 딱 붙게 설정 -->
            <ImageView
                android:id="@+id/progressImage"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/re_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 프로그레스바는 아래에 위치 -->
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progress="66"
            android:max="100"
            android:progressDrawable="@drawable/progress_drawable"
            android:background="#E0E0E0" /></LinearLayout>


    <!-- 프로필사진 -->

    <LinearLayout
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivProfile"

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/profileimage" />

        <TextView
            android:id="@+id/tvEditProfile"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="프로필 수정"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextNickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittext_background"
        android:hint="닉네임"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="12sp" />

    <!-- 나이 -->


    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittext_background"
        android:hint="나이를 입력하세요"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="12sp" />

    <!-- 성별 -->


    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/spinner_background_rounded"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_arrow_down_blue" />

    <!-- 생년월일 -->


    <EditText
        android:id="@+id/editTextBirthdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/edittext_background"
        android:hint="생년월일"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="12sp" />

    <!-- 빈 공간 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 가입하기 버튼 -->
    <Button
        android:id="@+id/completeSignupButton"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/rounded_button_gray"
        android:enabled="false"
        android:layout_marginTop="24dp"/>

</LinearLayout>
