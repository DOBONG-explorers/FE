<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 지도 영역 -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 다른 탭 화면을 덮어 표시할 컨테이너(처음엔 GONE) -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- 드래그 가능한 바텀시트 (홈-지도 위에서 보임) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/placeSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_bottomsheet_round30_translucent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="120dp"
        app:behavior_hideable="true"
        android:layout_gravity="bottom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <View
                android:id="@+id/dragHandle"
                android:layout_width="36dp"
                android:layout_height="4dp"
                android:background="@drawable/rect_handle"
                android:alpha="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imgPlace"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/dragHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/placeholder"/>

            <TextView
                android:id="@+id/txtPlaceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imgPlace"
                app:layout_constraintTop_toTopOf="@id/imgPlace"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="창동 문화체육센터"/>

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#FF000000"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintTop_toBottomOf="@id/txtPlaceName"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="내 위치로부터 1.2km"/>

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone_24"
                android:drawablePadding="6dp"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintTop_toBottomOf="@id/txtDistance"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="02-201-5000"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView3D"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="3D로 구경하기"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintBottom_toBottomOf="@id/imgPlace"
                app:layout_constraintTop_toBottomOf="@id/txtPhone"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 하단바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nav_background"
        android:elevation="10dp"
        app:itemIconTint="@color/selector_nav_text"
        app:itemTextColor="@color/selector_nav_text"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemRippleColor="@android:color/transparent"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>