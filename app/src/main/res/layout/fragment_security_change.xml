<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_mypage"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 상단바: 뒤로가기 + 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/round_button"
                android:src="@drawable/arrow"
                android:scaleType="centerInside"
                android:contentDescription="뒤로 가기" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 📦 비밀번호 변경 카드 -->
        <LinearLayout
            android:id="@+id/securityCardBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <!-- 현재 비밀번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 비밀번호"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <!-- 오른쪽 200dp: EditText + 눈 아이콘 겹치기 -->
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editCurrentPw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:textColorHint="#9E9E9E"

                        android:hint="현재 비밀번호 입력"
                        android:inputType="textPassword"
                        android:paddingEnd="36dp" />

                    <ImageButton
                        android:id="@+id/btnToggleCurrent"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="@null"
                        android:src="@drawable/ic_eye_off"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:contentDescription="비밀번호 보기 전환" />
 />
                </FrameLayout>
            </LinearLayout>

            <!-- 새 비밀번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새 비밀번호"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editNewPw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:hint="영문+숫자 조합 8-20자"
                        android:textColorHint="#9E9E9E"

                        android:inputType="textPassword"
                        android:paddingEnd="36dp" />

                    <ImageButton
                        android:id="@+id/btnToggleNew"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="@null"
                        android:src="@drawable/ic_eye_off"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:contentDescription="비밀번호 보기 전환" />
                </FrameLayout>
            </LinearLayout>

            <!-- 새 비밀번호 확인 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editConfirmPw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:hint="새 비밀번호 입력"
                        android:textColorHint="#9E9E9E"
                        android:inputType="textPassword"
                        android:paddingEnd="36dp" />

                    <ImageButton
                        android:id="@+id/btnToggleConfirm"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="@null"
                        android:src="@drawable/ic_eye_off"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:contentDescription="비밀번호 보기 전환" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>


        <!-- 완료 버튼 (기존 스타일 유지) -->
        <Button
            android:id="@+id/btnChange"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="완료"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:background="@drawable/rounded_button_blue"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
