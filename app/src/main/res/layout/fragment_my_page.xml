<?xml version="1.0" encoding="utf-8"?>
<!--개인정보 관리 페이지 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_mypage"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:padding="24dp">


    <!-- ✅ 상단바: 뒤로 가기 + 개인정보 관리 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="0dp"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/round_button"
            android:src="@drawable/arrow"
            android:scaleType="centerInside"
            android:contentDescription="뒤로 가기" />

        <TextView
            android:id="@+id/privacyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 관리"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 👤 프로필 사진 -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/prf3"
        android:scaleType="centerCrop"
        android:background="@drawable/round_image_bg"
        android:clipToOutline="true" />

    <!--
    <TextView
        android:id="@+id/editProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 수정"
        android:textStyle="bold"

        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

        ✏️ 프로필 수정 텍스트 -->

    <!-- 📦 정보 카드 (닉네임 / 생일 / 이메일 + EditText) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <!-- 닉네임 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/editNickname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:background="@android:color/transparent"
                android:textSize="13sp"
                android:textColor="#333333"
                android:inputType="textPersonName" />
        </LinearLayout>

        <!-- 생년월일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/editBirthday"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="1990-01-01"
                android:background="@android:color/transparent"
                android:textSize="13sp"
                android:textColor="#333333"
                android:inputType="date" />
        </LinearLayout>

        <!-- 이메일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/editEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:background="@android:color/transparent"
                android:textSize="13sp"
                android:textColor="#333333"
                android:inputType="textEmailAddress" />
        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/myPageButton"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="개인정보 수정"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:background="@drawable/rounded_button_blue"
        android:layout_marginTop="20dp" />

    <!-- 🚪 로그아웃 / 계정 탈퇴 박스 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"

            android:gravity="center">
        <!-- android:background="@drawable/rounded_card" -->


        <TextView
            android:id="@+id/deleteAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 탈퇴"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>
