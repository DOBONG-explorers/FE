<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 탭바 (뒤로가기, 제목) -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_button"
            android:src="@drawable/arrow"
            android:scaleType="centerInside"
            android:contentDescription="뒤로 가기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 제목 -->
        <TextView
            android:id="@+id/title_overlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="솔밭 공원"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <!-- 텍스트 가운데정렬을 위해서 빈공간을 -->
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="" />

    </LinearLayout>

    <!-- 3D 모델링 웹뷰 고정 영역 -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E3F2FD"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        app:layout_constraintHeight_percent="0.5">

        <WebView
            android:id="@+id/webview_3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- 하트 버튼 (오른쪽 아래) -->
        <ImageButton
            android:id="@+id/btn_heart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/heart_button_bg"
            android:src="@drawable/ic_heart_empty"
            android:scaleType="centerInside"
            android:contentDescription="찜 하기"
            android:tag="empty" />

    </FrameLayout>

    <!-- 탭레이아웃 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/Widget.Material3.TabLayout"
        android:background="@android:color/white"
        app:tabTextColor="@android:color/darker_gray"
        app:tabSelectedTextColor="#2687D4"
        app:tabIndicatorColor="#2687D4"
        app:tabIndicatorHeight="4dp"
        app:layout_constraintTop_toBottomOf="@id/webview_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 소개" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 시간" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 금액" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 장소 소개 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="장소 소개"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울도봉시 도봉구 노해로69길 132"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울특별시 강북구 우이동에 소재한 공원. 삼양로 서편에 위치해있으며 서울 경전철 우이신설선 4.19민주묘지역과 솔밭공원역 사이에 있다. 서울 유일의 평지형 소나무 군락지로 약 100년생 1,000여주가 집단적으로 자생하고 있다. 북서울꿈의숲과 함께 강북구를 대표하는 공원이다. 원래 사유지였으나 1990년, 아파트 개발지로 선정되면서 훼손 위기에 봉착했다. 그러나 주민과 지자체가 한마음 한뜻으로 이곳을 보존하려는 운동을 벌였고 1997년, 서울시와 강북구가 사유지인 솔밭을 매입해 2004년 1월 솔밭근린공원으로 개장하였다. 지하철로 서울 경전철 우이신설선을 타고 4.19민주묘지역에서 솔밭공원역에 내려서 4~5분 정도 걸어가면 된다. 주차 시설은 협소하며 서라벌중학교 근처에 있는 공영주차장이 가장 가깝다."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- 이용 시간 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용 시간"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 평일: 06:00 ~ 22:00\n• 주말: 06:00 ~ 23:00\n• 휴무일: 없음"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="8dp" />

            </LinearLayout>

            <!-- 이용 금액 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용 금액"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="무료"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- 리뷰 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰 내용이 여기에 표시됩니다."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 하단바 (둥글고 색 지정된 상태) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nav_background"
        android:elevation="0dp"
        app:itemIconTint="@color/selector_nav_text"
        app:itemTextColor="@color/selector_nav_text"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>