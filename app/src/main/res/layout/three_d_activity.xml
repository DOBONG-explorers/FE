<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 3D 모델링 웹뷰 고정 영역 -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#E3F2FD">

        <WebView
            android:id="@+id/webview_3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 시간 표시 -->
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_margin="16dp" />

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button_bg"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical" />

        <!-- 제목 오버레이 -->
        <TextView
            android:id="@+id/title_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="솔밭 공원"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp" />

        <!-- 하트 버튼 -->
        <ImageButton
            android:id="@+id/btn_heart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|right"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_heart"
            android:scaleType="centerInside" />
    </FrameLayout>

    <!-- 탭레이아웃 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        app:tabTextColor="@android:color/darker_gray"
        app:tabSelectedTextColor="@color/design_default_color_primary"
        app:tabIndicatorColor="@color/design_default_color_primary"
        app:tabIndicatorHeight="3dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 소개" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 시간" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 금액" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 장소 소개 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="장소 소개"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울도봉시 도봉구 노해로69길 132"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울동북시 강북구 우이동에 소재한 공원. 삼강윤 서편에 위치해있으며 서울 우이동의 평지성 소나무 군집지로 100년생 1,000여주가 집단적으로 자생하고있다. 북서울곰의숲과 함께 강북구를 대표하는 공원이다. 원래 사유지였으나 1990년, 아파트 개발지로 신청되다가 폐촌 위기에 봉착했다. 그러다 우이동 고목수에 한동모 의원으로 보존하는 노든들 발명 1997년, 서울시와 강북구가 사유지인 솔밭 매입해 2004년 1월 솔밭근린공원으로 개장 하였다."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- 이용 시간 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용 시간"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 평일: 06:00 ~ 22:00\n• 주말: 06:00 ~ 23:00\n• 휴무일: 없음"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="8dp" />

            </LinearLayout>

            <!-- 이용 금액 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용 금액"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="무료"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- 리뷰 탭 -->
            <LinearLayout
                android:id="@+id/tab_content_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰 내용이 여기에 표시됩니다."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/design_default_color_primary"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/nav_bell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bell"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_heart"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>