<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 지도 영역 (상단에 배치) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/placeSheet" />

    <!-- 검색바 (상단에 배치) -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:queryHint="주변명소 찾기"
        android:iconifiedByDefault="false"
        app:cardCornerRadius="16dp"
        android:background="@drawable/bg_bubble_user"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 장소 정보 카드 (MaterialCardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/placeSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="8dp"
        app:behavior_peekHeight="120dp"
        app:behavior_hideable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 카드 내용 (내부 배치) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 드래그 핸들 -->
            <View
                android:id="@+id/dragHandle"
                android:layout_width="36dp"
                android:layout_height="4dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.6"
                android:background="@drawable/rect_handle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 장소 이미지 -->
            <ImageView
                android:id="@+id/imgPlace"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dragHandle" />

            <!-- 장소 이름 -->
            <TextView
                android:id="@+id/txtPlaceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="창동 문화체육센터"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgPlace"
                app:layout_constraintTop_toTopOf="@id/imgPlace" />

            <!-- 거리 -->
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="내 위치로부터 1.2km"
                android:textColor="#FF000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintTop_toBottomOf="@id/txtPlaceName" />

            <!-- 전화번호 -->
            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone_24"
                android:drawablePadding="10dp"
                android:text="02-201-5000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintTop_toBottomOf="@id/txtDistance" />

            <!-- 3D 보기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView3D"
                style="@style/CustomLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:text="      3D로 구경하기      "
                app:layout_constraintBottom_toBottomOf="@id/imgPlace"
                app:layout_constraintStart_toStartOf="@id/txtPlaceName"
                app:layout_constraintTop_toBottomOf="@id/txtPhone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>